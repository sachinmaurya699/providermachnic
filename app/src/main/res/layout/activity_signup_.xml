<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sossolution.serviceonwayustad.My_Activity.Signup_Activity">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/imglogo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/image_id"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Serviceonway Ustad"
        android:textSize="21sp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:id="@+id/my_text"
        android:gravity="center_horizontal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_id"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:textCursorDrawable="@drawable/curser_design"
        android:id="@+id/name_id"
        android:inputType="text"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:drawableLeft="@drawable/shop_drawable"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_text"
        android:hint="Garage Name"
        android:background="@drawable/bg_desing"
        />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/r_group"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_id"
        >

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Four-Wheeler"
            android:layout_margin="5dp"
            android:checked="true"
            android:buttonTint="@color/your_color"
            android:textSize="15sp"
            android:id="@+id/radio_1"
            android:layout_marginStart="20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_id"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Two-Wheeler"
            android:buttonTint="@color/your_color"
            android:textSize="15sp"
            android:layout_margin="5dp"
            android:id="@+id/radio_2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
    </RadioGroup>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:id="@+id/wonner_id"
        android:inputType="text"
        android:textCursorDrawable="@drawable/curser_design"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/my_drawable"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/r_group"
        android:hint="Owner Name"
        android:background="@drawable/bg_desing"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:id="@+id/email_id"
        android:inputType="text"
        android:drawableLeft="@drawable/email_margin"
        app:layout_constraintRight_toRightOf="parent"
        android:textCursorDrawable="@drawable/curser_design"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wonner_id"
        android:hint="Email id"
        android:background="@drawable/bg_desing"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:maxLength="10"
        android:digits="0123456789"
        android:id="@+id/phone_number"
        android:inputType="number"
        android:drawableLeft="@drawable/phone_drawable"
        app:layout_constraintRight_toRightOf="parent"
        android:textCursorDrawable="@drawable/curser_design"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_id"
        android:hint="Phone NUmber"
        android:background="@drawable/bg_desing"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:id="@+id/city_id"
        android:inputType="textMultiLine"
        android:drawableLeft="@drawable/address_drawable"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textCursorDrawable="@drawable/curser_design"
        app:layout_constraintTop_toBottomOf="@+id/phone_number"
        android:hint="City"
        android:background="@drawable/bg_desing"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:id="@+id/local_id"
        android:inputType="textMultiLine"
        android:drawableLeft="@drawable/location_drawable"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/city_id"
        android:hint="Locality"
        android:textCursorDrawable="@drawable/curser_design"
        android:background="@drawable/bg_desing"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        />

   <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:ems="12"
       android:id="@+id/signup_id"
       android:padding="18dp"
       android:layout_margin="15dp"
       android:backgroundTint="#FBB917"
       android:background="@drawable/bg_desing"
       android:text="Signup"
       android:textColor="#fff"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/local_id"
       />

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>