<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="150dp"
           >

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:text="USER DETAILS"
               android:id="@+id/user_details"
               android:gravity="center"
               android:textStyle="bold"
               android:textSize="21sp"
               >

           </TextView>


           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/my_dummy_date"
               android:text="Date-"
               android:textColor="#000"
               android:layout_marginTop="5dp"
               android:layout_marginStart="10dp"
               android:textSize="14sp"
               app:layout_constraintTop_toBottomOf="@+id/user_details"
               app:layout_constraintLeft_toLeftOf="parent"
               />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/my_current_date"
               android:text="Date"
               android:layout_marginTop="5dp"
               android:layout_marginStart="50dp"
               android:textSize="14sp"
               app:layout_constraintTop_toBottomOf="@+id/user_details"
               app:layout_constraintLeft_toLeftOf="parent"

               />

          <!-- ....................2 item.............-->

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/my_dummy_name"
               android:text="Booking id-"
               android:textColor="#000"
               android:layout_marginStart="10dp"
               android:layout_marginTop="5dp"
               android:textSize="14sp"
               app:layout_constraintTop_toBottomOf="@+id/my_dummy_date"
               app:layout_constraintLeft_toLeftOf="parent"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/my_current_id"
               android:text="booking id"
               android:layout_marginTop="5dp"
               android:layout_marginStart="90dp"
               android:textSize="14sp"
               app:layout_constraintTop_toBottomOf="@+id/my_dummy_date"
               app:layout_constraintLeft_toLeftOf="parent"
               />

           <!-- ....................3 item.............-->

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/my_dummy_contact_number"
               android:text="Vechicle-"
               android:textColor="#000"
               android:layout_marginStart="10dp"
               android:layout_marginTop="5dp"
               android:textSize="14sp"
               app:layout_constraintTop_toBottomOf="@+id/my_dummy_name"
               app:layout_constraintLeft_toLeftOf="parent"
               />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/my_Current_vechicle"
               android:text="vechicle-"
               android:layout_marginStart="75dp"
               android:layout_marginTop="5dp"
               android:textSize="14sp"
               app:layout_constraintTop_toBottomOf="@+id/my_dummy_name"
               app:layout_constraintLeft_toLeftOf="parent"
               />

           <!--......................4.......................-->
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/my_dummy_Model"
               android:text="Model-"
               android:textColor="#000"
               android:layout_marginEnd="150dp"
               android:layout_marginStart="10dp"
               android:layout_marginTop="5dp"
               android:textSize="14sp"
               app:layout_constraintTop_toBottomOf="@+id/my_dummy_date"
               app:layout_constraintRight_toRightOf="parent"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/my_current_Model"
               android:text="Model-"
               android:layout_marginEnd="80dp"
               android:layout_marginStart="10dp"
               android:layout_marginTop="5dp"
               android:textSize="14sp"
               app:layout_constraintTop_toBottomOf="@+id/my_dummy_date"
               app:layout_constraintRight_toRightOf="parent"
               />
        <!--  ..................4.................-->
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/my_dummy_maker"
               android:text="Maker-"
               android:textColor="#000"
               android:layout_marginEnd="150dp"
               android:layout_marginStart="10dp"
               android:layout_marginTop="5dp"
               android:textSize="14sp"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/my_dummy_name"

               />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/my_current_maker"
               android:text="Maker-"
               android:layout_marginEnd="80dp"
               android:layout_marginStart="10dp"
               android:layout_marginTop="5dp"
               android:textSize="14sp"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/my_dummy_name"

               />










       </androidx.constraintlayout.widget.ConstraintLayout>








    </androidx.cardview.widget.CardView>













</androidx.constraintlayout.widget.ConstraintLayout>