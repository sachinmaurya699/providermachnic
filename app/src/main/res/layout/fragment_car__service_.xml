<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Select Car Service "
        android:id="@+id/textview_item"
        android:gravity="center_horizontal"
        android:textSize="21sp"
        android:textStyle="bold"
        />

    <CheckBox
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:id="@+id/selecte_all"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="60dp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:id="@+id/price_update_car"
        android:text="Update price"
        android:padding="10dp"
        android:background="@drawable/bg_desing"
        android:backgroundTint="@color/colour"
        android:textColor="#F1EEEE"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintRight_toRightOf="parent"
        />
    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search_item"
        android:background="#E5E4E2"
        android:layout_margin="5dp"
        android:autofillHints="Search bike service"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price_update_car"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="490dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        android:layout_margin="10dp"
        android:id="@+id/card_view1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_item"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="#C0C0C0"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/recyclerview_car_service"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"

                />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show count"
        android:layout_marginStart="10dp"
        android:padding="5dp"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="14dp"
        android:id="@+id/data_count"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_view1"
        />

    <Button
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:ems="15"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Select_Service"
        android:id="@+id/select_service"
        android:layout_margin="10dp"
        android:backgroundTint="#FBB917"
        android:background="@drawable/bg_desing"
        android:textColor="#fff"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_view1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:src="@drawable/ic_next"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/next_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_view1"

        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/ic_prives"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/back_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_view1"

        />










</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>