<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="ID:1499"
        android:id="@+id/my_booking_id"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_margin="5dp"
        android:textColor="#0BA8BC"
        >
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#0BA8BC"
        android:text="ADD SERVICE"
        android:textStyle="bold"
        android:textSize="21sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_crose"
        android:layout_margin="5dp"
        />

   <EditText
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintLeft_toLeftOf="parent"
       android:hint="Service Name"
       android:id="@+id/service_name"
       android:padding="10dp"
       android:layout_margin="10dp"
       android:background="@drawable/bg_desing"
       android:text="auto motor"
       app:layout_constraintTop_toBottomOf="@+id/my_booking_id"
       />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view_item"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/service_name"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#E1DDDD"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/service_name"

            />
    </androidx.cardview.widget.CardView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="8"
        android:background="@drawable/bg_desing"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Update"
        android:layout_marginStart="20dp"
        android:textColor="#fff"
        android:backgroundTint="#08D310"
        app:layout_constraintTop_toBottomOf="@+id/card_view_item"
        >
    </Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/bg_desing"
        android:gravity="center"
        android:ems="8"
       android:layout_marginEnd="20dp"
        android:text="close"
        android:textColor="#fff"
        android:backgroundTint="#EC0B05"
        app:layout_constraintTop_toBottomOf="@+id/card_view_item"
        >
    </Button>




















</androidx.constraintlayout.widget.ConstraintLayout>