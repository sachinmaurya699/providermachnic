<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sossolution.serviceonwayustad.My_Activity.Otp_Activity">

    <include
        layout="@layout/my_toolbar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/my_toolbar"
        >
    </include>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/otp_bg"
        android:layout_marginTop="10dp"
        android:id="@+id/image_otp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbar"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Verify Account"
        android:id="@+id/verify_number"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:textSize="21dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/image_otp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_view1"
        android:textColor="#232121"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Please Enter The Otp For Verification"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/verify_number"
        android:gravity="center_horizontal"
        android:textSize="16dp"
        android:textStyle="bold"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please Enter the otp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="15dp"
        android:textCursorDrawable="@drawable/curser_design"
        android:layout_marginTop="9dp"
        android:layout_marginStart="10dp"
        android:id="@+id/otp_id"
        android:padding="14dp"
        android:gravity="center_horizontal"
        android:background="#EAE6E6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/view_1"
        app:layout_constraintTop_toBottomOf="@+id/text_view1"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/view_1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otp_id"


        />




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resend"
        android:layout_marginTop="10dp"
        android:id="@+id/resend_id"
        android:gravity="center_horizontal"
        android:textSize="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_1"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:padding="15dp"
        android:id="@+id/otp_getid"
        android:text="Verify"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:textColor="#F5970D"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resend_id"
        >

    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>