<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F8F5"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/image_slider_four"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/img5"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/my_title4"
        android:textSize="21sp"
        android:id="@+id/my_title_four"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_slider_four"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/slide_4"
        android:textSize="16sp"
        android:id="@+id/my_four_slider_text"
        android:padding="12dp"
        android:layout_marginTop="20dp"
        android:textAllCaps="true"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_title_four"
        />












</androidx.constraintlayout.widget.ConstraintLayout>